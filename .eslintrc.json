{
  "extends": "eslint:recommended",
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "semi": [
      2,
      "always"
    ],
    "require-yield": 0,
    //    "strict": ["error", "global"],
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "space-before-function-paren": [
      "warn",
      "never"
    ],
    "no-unused-vars": "warn"
  }
}
